<div>
  <h1 class="font-bold text-4xl">Article Title: 
    <span class="font-bold"> <%= @article.title %></span>
  </h1>
  <p> <%= @article.body %> </p>
  <ul>
    <li><%= link_to "Edit", edit_article_path(@article) %></li>
    <li class="text-red-500">
      <%= button_to "Delete", article_path(@article), method: :delete %>
    </li>
  </ul>
</div>
